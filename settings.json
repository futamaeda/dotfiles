{
    //// 基本系
    "window.zoomLevel": 1,

    "editor.fontSize": 16,

    // 色
    // "workbench.colorTheme": "Default Dark+",

    // フォント
    //"editor.fontFamily": "Consolas, 'Courier New', monospace",
    //"editor.fontWeight": "normal",
    //"editor.formatOnPaste": false,

    // エディタ見栄え系
    "editor.quickSuggestionsDelay": 5,
    "editor.renderLineHighlight": "all",

    // タブとスペースの可視化
    "editor.renderWhitespace": "boundary",

    // "references"のとこ消す
    "editor.codeLens": false,

    // インデントガイド(インデントに沿って縦線を表示)
    "editor.renderIndentGuides": true,

    // インデント設定を固定しておく(Shader書いてるとTabになっちゃうから)
    "editor.detectIndentation": false,

    // フォーマット時
    //"editor.formatOnSave": false,

    // diff確認時
    // 差分を横に並べて表示ではなく行内に表示する
    "diffEditor.renderSideBySide": false,

    // Quick Openで開いたファイルはプレビューにしない方が使いやすい
    "workbench.editor.enablePreviewFromQuickOpen": false,

    // Altキーをコマンド用に開放
    "window.enableMenuBarMnemonics": false,

    // タイトル部分にファイルへの完全パスを。
    "window.title": "${dirty}${activeEditorLong}${separator}${rootName}${separator}${appName}",

    // Zenモードでタブの表示
    "zenMode.hideTabs": false,

    // ファイルエンコーディング
    "files.encoding": "utf8",
    
    // サーチ時
    "search.smartCase": true,

    ////デバッグ
    // 任意のファイルにブレークポイントを設定できるようにする
    "debug.allowBreakpointsEverywhere": true,

    // TODO: これをいじるとたぶんキーバインド効かない奴を効かせられる
    // "terminal.integrated.commandsToSkipShell": [


    //// Vim用

    // TODO: サーチしたら色つけっぱにしたい
    "vim.searchHighlightColor": "rgba(255, 215, 236, 0.2)",

    "vim.visualstar": true,

    // 外部コピーしたい。 keybindings.jsonでやった
    // いらなかったら消しておく
    //"vim.useSystemClipboard": true,

    // Vimでコントロールする、しないキー
    // TODO: そのうちできるようにしたいけどこのままでも悪くない
    "vim.handleKeys": {
        "<C-k>": false,
        "<C-h>": false,
        "<C-j>": false,
        "<C-l>": false,
    },

    "vim.insertModeKeyBindingsNonRecursive": [
        
    ],

    "vim.insertModeKeyBindings": [
       // 最重要
       {
           "before": ["j", "j"],
           "after": ["<ESC>"]
       },
       // TODO: このへんはvimじゃなくVSCode側でやらないと？今は消してる
       //{
       //    "before": ["<C-h>"],
       //    "after": ["left"]
       //},
       //{
       //    "before": ["<C-l>"],
       //    "after": ["right"]
       //},
       //{
       //    "before": ["<C-j>"],
       //    "after": ["down"]
       //},
       //{
       //    "before": ["<C-k>"],
       //    "after": ["up"]
       //},
    ],

    // 直書きでは動かないのでleaderとして指定
    "vim.leader": "<space>",

    "vim.otherModesKeyBindings": [
       {
           "before": ["<leader>", "m"],
           "after": ["%"]
       },
       {
           "before": ["<leader>", "h"],
           "after": ["^"]
       },
       {
           "before": ["<leader>", "l"],
           "after": ["$"]
       },
        
       // コロンセミコロン入れ替え
       {
           "before":[";"],
           "after":[":"]
       },
       {
           "before":[":"],
           "after":[";"]
       },
    ]



}